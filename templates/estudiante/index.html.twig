{% extends 'base.html.twig' %}

{% block title %}Estudiante index{% endblock %}

{% block body %}
    <h1>Estudiante index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Identificacion</th>
                <th>Apellidos</th>
                <th>Nombres</th>
                <th>Sexo</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>FechaNacimiento</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for estudiante in estudiantes %}
            <tr>
                <td>{{ estudiante.id }}</td>
                <td>{{ estudiante.identificacion }}</td>
                <td>{{ estudiante.apellidos }}</td>
                <td>{{ estudiante.nombres }}</td>
                <td>{{ estudiante.sexo }}</td>
                <td>{{ estudiante.correo }}</td>
                <td>{{ estudiante.telefono }}</td>
                <td>{{ estudiante.fechaNacimiento ? estudiante.fechaNacimiento|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_estudiante_show', {'id': estudiante.id}) }}">show</a>
                    <a href="{{ path('app_estudiante_edit', {'id': estudiante.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_estudiante_new') }}">Create new</a>
{% endblock %}
